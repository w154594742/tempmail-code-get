{
  "manifest_version": 3,
  "name": "临时邮箱验证码获取工具",
  "version": "1.0.0",
  "description": "自动生成临时邮箱并获取验证码，支持历史记录管理",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://tempmail.plus/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "临时邮箱工具",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
